{
    "naver": {
        "clientId": "id",
        "clientSecret": "secret",
        "endpoint": "https://openapi.naver.com/v1/papago/n2mt"
    },
    "google": {
        "apiKey": "path"
    },
    "settings": {
        "detection": {
            "language": {
                "filterScript": true,
                "script": "Hangul",
                "filterLanguage": false,
                "language": "Korean",
                "detectLanguage": false,
                "languageHints": ["ko-KR"]
            },
            "subtitleLocation": {
                "restrictLocation": true,
                "top": 60,
                "bottom": 100,
                "left": 0,
                "right": 100
            },
            "confidence": 90
        },
        "translation": {
            "translate": true,
            "engine": "Google",
            "sourceLanguage": "ko",
            "targetLanguage": "en"
        },
        "fixSubtitles": {
            "fix": true,
            "ignoreWhitespace": true,
            "minimumDuration": 2000,
            "partialMatch": true,
            "partialMatchPercentage": 75
        },        
        "inputFile": "video/input.mp4",
        "outputFile": "output/output.vtt"
    }
}